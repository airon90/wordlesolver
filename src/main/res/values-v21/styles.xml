<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme for API 21+. This theme completely replaces
      AppBaseTheme from BOTH res/values/styles.xml and
      res/values-v11/styles.xml on API 21+ devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->
  </style>

  <style name="AppCyanBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarCyanStyle</item>

  </style>

  <style name="AppBlueBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarBlueStyle</item>

  </style>

  <style name="AppOrangeBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarOrangeStyle</item>

  </style>

  <style name="AppPurpleBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarPurpleStyle</item>

  </style>

  <style name="AppRedBaseTheme" parent="android:Theme.Material">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarRedStyle</item>

  </style>

  <style name="actionBarCyanStyle"
         parent="android:style/Widget.Material.ActionBar">

    <item name="android:background">@color/cyan_action_bar</item>

  </style>

  <style name="actionBarBlueStyle"
         parent="android:style/Widget.Material.ActionBar">

    <item name="android:background">@color/blue_action_bar</item>

  </style>

  <style name="actionBarOrangeStyle"
         parent="android:style/Widget.Material.ActionBar">

    <item name="android:background">@color/orange_action_bar</item>

  </style>

  <style name="actionBarPurpleStyle"
         parent="android:style/Widget.Material.ActionBar">

    <item name="android:background">@color/purple_action_bar</item>

  </style>

  <style name="actionBarRedStyle"
         parent="android:style/Widget.Material.ActionBar">

    <item name="android:background">@color/red_action_bar</item>

  </style>

</resources>
